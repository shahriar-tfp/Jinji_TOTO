<?xml version="1.0" encoding="ISO-8859-1"?>
<Template ID="pr_payslip" SavedBy="sy.tey" SavedAt="28/04/2009 11:34:04 AM" EngineVersion="8.0.30">
	<PdfForm PdfFormTemplateFilename="pr_payslip.pdf" ID="pr_payslip" PdfFormMode="OneFormPerDataRow" FlattenFields="True">
